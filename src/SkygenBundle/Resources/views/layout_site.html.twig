<script>
    $('#connexion_action').click(function () {

        var user = $('#utilisateur_connexion').val();
        var mdp = $('#mdp_connexion').val();

        if (user != '' && mdp != '') {

            $.ajax({
                type: 'POST',
                url: '',
                data: {
                    user: user,
                    mdp: mdp
                },
                success: function (retour, textStatus, jqXHR) {
                    if (retour.message == "erreur") {

                        swal("Error!", "You need compelete all inputs", "error")
                    } else {
                        swal("Succes!", "You message seeded", "success")
                    }
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    alert(textStatus + " " + errorThrown);
                }
            });


        }
    })
</script>
